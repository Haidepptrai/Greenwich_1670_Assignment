		</div>
		<div class="row">
			<div class="col-lg-4 col-md-6">
				<div class="item">
					@if (Model != null)
					{
						@foreach (var item in Model)
						{
							<img src="/uploads/products/@item.ImageFile" alt="">
							//<span class="category">Luxury Villa</span>
							<h6>@item.Price $</h6>
							<div class="card-body">
								<h5 class="card-title">@item.Name</h5>
								<p class="card-text">Quantity: @item.StockLevel</p>
							</div>
							<div class="main-button">
								<a href="@Url.Action("Details","Products", new { id = item.ProductId })">Schedule a visit</a>
							</div>
						}
					}
					else
					{
						<p>No data available</p>
					}
				</div>
			</div>
		</div>
