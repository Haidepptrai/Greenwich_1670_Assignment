<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>@ViewData["Title"] - FPT_Pharmacy_Assignment</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="/assets/css/fontawesome.css">
    <link rel="stylesheet" href="/assets/css/templatemo-villa-agency.css">
    <link rel="stylesheet" href="/assets/css/owl.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/assets/css/checkout.css" />
    <link rel="stylesheet" href="/assets/css/order-complete.css" />
    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>

    @* For notification *@

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    @RenderSection("scripts", required: false)
</head>

<body style="
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    height: 100%;">
    <div style="flex: 1 0 auto;">
        <header class="header-area header-sticky">
            <div class="">
                <nav class="main-nav" style="align-items: center; width: 90%; margin:auto">
                    <!-- ***** Logo Start ***** -->
                    <a asp-controller="Home" asp-action="Index" class="logo" style="height: fit-content;">
                        <img src="~/images/logos/download.png" alt="Alternate Text" width="100" height="100" />
                    </a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul style="display: flex; flex-direction: row; gap: 2rem; flex-basis: 100%; justify-content: center; height: fit-content; margin: auto; margin-left: -5rem">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                        <li><a asp-area="" asp-controller="Contact" asp-action="Index">Contact Us</a></li>
                        <li><a asp-area="" asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart"></i> Cart</a></li>
                    </ul>
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <partial name="_LoginPartial" />
                </nav>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>
    <footer style="flex-shrink: 0;">
        <div class="container">
            <div class="col-lg-8">
                <span style="color: white; text-align: center">&copy; @DateTime.Now.Year FPT Pharmacity. All rights reserved.</span>
            </div>
        </div>
    </footer>

    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/isotope.min.js"></script>
    <script src="/assets/js/owl-carousel.js"></script>
    <script src="/assets/js/counter.js"></script>
    <script src="/assets/js/custom.js"></script>
    <script src="/assets/js/checkout-dropdown.js"></script>
</body>
</html>
