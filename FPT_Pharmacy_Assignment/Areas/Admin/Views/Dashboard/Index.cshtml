@model List<FPT_Pharmacy_Assignment.Areas.Admin.Models.Order>
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container-fluid">
    <!--  Row 1 -->
    <div class="row">
        <div class="col-lg-8 d-flex align-items-strech">
            <div class="card w-100">
                <div class="card-body">
                    <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                        <div class="mb-3 mb-sm-0">
                            <h5 class="card-title fw-semibold">Sales Overview</h5>
                        </div>
                        <div>
                            <select class="form-select">
                                <option value="1">March 2023</option>
                                <option value="2">April 2023</option>
                                <option value="3">May 2023</option>
                                <option value="4">June 2023</option>
                            </select>
                        </div>
                    </div>
                    <!-- Here you can integrate your sales data using JavaScript chart libraries like Chart.js -->
                    <div id="chart"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <!-- Yearly Breakup -->
            <div class="card overflow-hidden">
                <div class="card-body p-4">
                    <h5 class="card-title mb-9 fw-semibold">Yearly Breakup</h5>
                    <!-- Here you can integrate your yearly data -->
                    <div class="row align-items-center">
                        <div class="col-8">
                            <!-- Display your yearly data -->
                        </div>
                        <div class="col-4">
                            <!-- Display your chart for yearly breakup -->
                            <div id="breakup"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Monthly Earnings -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-9 fw-semibold"> Monthly Earnings </h5>
                    <!-- Display your monthly earnings data -->
                    <div id="earning"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Recent Transactions -->
        <div class="col-lg-4 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="card-title fw-semibold">Recent Transactions</h5>
                    </div>
                    <ul class="timeline-widget mb-0 position-relative mb-n5">
                        @foreach (var order in Model)
                        {
                            <li class="timeline-item d-flex position-relative overflow-hidden">
                                <!-- Display transaction details -->
                                <div class="timeline-time text-dark flex-shrink-0 text-end">@order.CreatedAt.ToString("HH:mm tt")</div>
                                <div class="timeline-badge-wrap d-flex flex-column align-items-center">
                                    <span class="timeline-badge border-2 border border-primary flex-shrink-0 my-8"></span>
                                    <span class="timeline-badge-border d-block flex-shrink-0"></span>
                                </div>
                                    <div class="timeline-desc fs-3 text-dark mt-n1">Payment received from user @order.UserId of $@order.TotalPrice</div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!-- Display Recent Transactions in a Table -->
        <div class="col-lg-8 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Recent Transactions</h5>
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">UserId</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Status</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Total Price</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Created At</h6>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Display your recent transactions data in a table format -->
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.UserId</td>
                                        <td>@order.Status</td>
                                        <td>$@order.TotalPrice</td>
                                        <td>@order.CreatedAt.ToString("MM/dd/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="py-6 px-6 text-center">
        <span>&copy; @DateTime.Now.Year Admin Panel. All rights reserved.</span>
    </footer>
</div>
