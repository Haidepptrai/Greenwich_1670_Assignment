@model FPT_Pharmacy_Assignment.Areas.Admin.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center">Are you sure you want to delete this product?</h3>
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">Image</dt>
                        <dd class="col-sm-10">
                            <img src="/uploads/products/@Model.ImageFile" alt="Product Image" class="img-fluid" style="max-width: 200px; max-height: 200px;" />
                        </dd>
                        <dt class="col-sm-2">Name</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-2">Category</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Name)</dd>
                        <dt class="col-sm-2">Description</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
                        <dt class="col-sm-2">Price</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
                        <dt class="col-sm-2">Stock Level</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.StockLevel)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductId" />
                <div class="text-center mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
